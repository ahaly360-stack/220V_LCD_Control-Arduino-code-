<div class="box" id="controlPanel">
  <h2 class="rgb-title">LED Control by ESP 8266</h2>

  <div class="blubcontainer" id="bulb">
    <svg viewBox="0 0 100 100">
      <rect fill="#666" x="40" y="75" width="20" height="10"/>
      <path class="bulb-glass"
        d="M30 35 Q30 65 40 75 L60 75 Q70 65 70 35 A20 20 0 1 0 30 35"/>
      <path class="filament"
        d="M45 75 L45 55 Q50 45 55 55 L55 75"
        fill="none" stroke-width="2"/>
    </svg>
  </div>

  <div class="led-status">
    LED Status: <span id="statusText">OFF</span>
  </div>

  <label class="switch">
    <input type="checkbox" id="toggle" onchange="toggleBulb(this)">
    <span class="slider">
      <span id="switchText">OFF</span>
    </span>
  </label>
</div>

<script>
const correctPassword = "ahmed"; // الباسورد الخاص بك

function checkLogin() {
  const pass = document.getElementById("password").value;
  if (pass === correctPassword) {
    document.getElementById("loginBox").style.display = "none";
    document.getElementById("controlPanel").style.display = "block";
    loadState();
  } else {
    document.getElementById("errorMsg").innerHTML = "Wrong Password!";
  }
}

function loadState() {
  fetch("/state")
    .then(res => res.text())
    .then(data => {
      if (data === "ON") { setOn(); }
      else { setOff(); }
    }).catch(err => console.log("ESP not connected yet"));
}

function toggleBulb(el) {
  if (el.checked) {
    fetch("/on");
    setOn();
  } else {
    fetch("/off");
    setOff();
  }
}

function setOn() {
  document.getElementById("bulb").classList.add("on");
  document.getElementById("toggle").checked = true;
  document.getElementById("statusText").innerHTML = "ON";
  document.getElementById("switchText").innerHTML = "ON";
}

function setOff() {
  document.getElementById("bulb").classList.remove("on");
  document.getElementById("toggle").checked = false;
  document.getElementById("statusText").innerHTML = "OFF";
  document.getElementById("switchText").innerHTML = "OFF";
}
</script>

</body>
</html>
)=====";
  server.send(200, "text/html", html);
}

void handleOn() {
  ledState = true;
  digitalWrite(ledPin, HIGH);
  server.send(200, "text/plain", "ON");
}

void handleOff() {
  ledState = false;
  digitalWrite(ledPin, LOW);
  server.send(200, "text/plain", "OFF");
}

void setup() {
  pinMode(ledPin, OUTPUT);
  digitalWrite(ledPin, LOW);

  Serial.begin(115200);
  WiFi.begin(ssid, password);

  Serial.print("Connecting to WiFi");
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }

  Serial.println("\nConnected!");
  Serial.print("Open this IP in browser: ");
  Serial.println(WiFi.localIP());

  server.on("/", handleRoot);
  server.on("/on", handleOn);
  server.on("/off", handleOff);

  server.begin();
}

void loop() {
  server.handleClient();
}
