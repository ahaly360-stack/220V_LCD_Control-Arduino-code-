#include <ESP8266WiFi.h>
#include <ESP8266WebServer.h>

const char* ssid = "WIFI NAME ";
const char* password = "PASSWORD";

ESP8266WebServer server(80);

const int ledPin = D0;   // ✅ Changed to D0 (GPIO16)
bool ledState = false;

void handleRoot() {
  String html =R"=====( 
